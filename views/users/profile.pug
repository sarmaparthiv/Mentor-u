        body {
        margin: 0;
        padding: 0;
        background: linear-gradient(to bottom, #555555, #222222);
        font-family: Arial, sans-serif;
        }

        .container {
        max-width: 960px;
        margin: 0 auto;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        background-color: #fff;
        }

        .card {
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin-bottom: 20px;
        }

        .avatar {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        object-fit: cover;
        }

        h2 {
        font-size: 20px;
        margin: 10px 0;
        }

        p {
        font-size: 14px;
        margin: 0;
        }

        .button-container {
        display: flex;
        flex-direction: column;
        gap: 10px;
        margin-top: 20px;
        }

        .button {
        padding: 6px;
        border-radius: 4px;
        background-color: #4caf50;
        color: #fff;
        font-size: 12px;
        border: none;
        cursor: pointer;
        text-decoration: none;
        }

        .button:hover {
        background-color: #45a049;
        color: #fff;
        text-decoration: none; /* Remove underline */
      }
      .button:focus {
        outline: none; /* Remove blue link outline on focus */
      }
      .non-editable {
        cursor: default;
        pointer-events: none;
      }
