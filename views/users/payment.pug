doctype html
html
  head
    title Dummy Payment Gateway
    link(rel="stylesheet" href="styles.css")
  body
    .container
      h1 Dummy Payment Gateway
      form#paymentForm(action="/process-payment" method="POST")
        label(for="cardNumber") Card Number
        input#cardNumber(type="text" name="cardNumber" required)
        label(for="expiry") Expiry
        input#expiry(type="text" name="expiry" required)
        label(for="cvc") CVC
        input#cvc(type="text" name="cvc" required)
        button#submitBtn(type="submit") Pay Now
