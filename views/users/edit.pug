html
  head
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css')
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC", crossorigin="anonymous")
    style.
      /* Add the CSS styles here */
      body {
        margin: 0;
        padding: 0;
        background: linear-gradient(to bottom, #555555, #222222);
        font-family: Arial, sans-serif;
      }

      .container {
        max-width: 960px;
        margin: 0 auto;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        background-color: #fff;
      }

      .card {
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin-bottom: 20px;
      }

      .avatar {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        object-fit: cover;
      }

      h2 {
        font-size: 20px;
        margin: 10px 0;
      }

      p {
        font-size: 14px;
        margin: 0;
      }

      .button-container {
        display: flex;
        flex-direction: column;
        gap: 10px;
        margin-top: 20px;
      }

      .button {
        padding: 6px;
        border-radius: 4px;
        background-color: #4caf50;
        color: #fff;
        font-size: 12px;
        border: none;
        cursor: pointer;
      }

      .button:hover {
        background-color: #45a049;
      }

      .non-editable {
        pointer-events: none;
        color: #666; /* Optional styling to visually indicate non-editability */
      }

      .description-input {
        height: 100px; /* Increase the height of the description input field */
      }

  body
    include navbar.pug

    form(method="POST", action="/mentor/update-profile")
      div.container
        div.row.justify-content-center
          div.col-md-6
            div.card
              div.cardContent
                div.text-center
                  img.avatar(src="https://winaero.com/blog/wp-content/uploads/2017/12/User-icon-256-blue.png", alt="osama")
                  div
                    h2 #{mentorData.fullname}
                    p #{profileData.occupation}
                div.cardActions.button-container
                  button.button(type="submit") Save

        div.row.justify-content-center
          div.col-md-6
            div.card
              div.cardContent
                div
                  div
                    p Name:
                    input(type="text", value=mentorData.fullname, name="fullname", class="form-control")
                hr
                div
                  div
                    p Email:
                    span(class="non-editable") #{mentorData.email}
                    input(type="hidden" name="email" value=mentorData.email)
                hr
                div
                  div
                    p Number:
                    input(type="text", value=mentorData.number, name="number", class="form-control")
          
        div.row.justify-content-center
          div.col-md-6
            div.card
              div.cardContent
                div
                  div
                    p Description:
                    input(type="text", value=profileData.description, name="Description", class="form-control description-input")

        div.row.justify-content-center
          div.col-md-6
            div.card
              div.cardContent
                div
                  div
                    p Skills:
                    input(type="text", value=profileData.skills, name="skills", class="form-control")
                div
                  div
                    p Languages:
                    input(type="text", value=profileData.languages, name="languages", class="form-control")
                div
                  div
                    p Cost:
                    input(type="text", value=profileData.cost, name="cost", class="form-control")
