html
  head
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css")
    style
      include ../assets/css/home.css
  body
    include navbar.pug
    div.container
      h1 Welcome, #{user.fullname}
      table.table.table-striped.table-bordered.table-hover
        tr
          th fullname:
          td #{user.fullname}
        tr
          th username:
          td #{user.username}
        tr
          th email: 
          td #{user.email}
        tr 
          th number:
          td #{user.number}

      a(href=`/edit?id=${user._id}`) Edit 
      br
      br
      button.btn.btn-primary(type="button", onclick="location.href='/logout'") Logout